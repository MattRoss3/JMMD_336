<%- include('partials/header', { title: 'Translator' }) %>

  <div class="translator-container">
    <div class="branding">
      <h2>🌍 Translator 🌍</h2>
      <p>Quick Translation </p>
    </div>

    <form method="POST" action="/translator">
      <label for="word">Enter a word to translate:</label><br>
      <input type="text" id="word" name="word" value=""><br>
      <button type="submit">Translate</button>
    </form>

    <% let translated=Array.isArray(message) ? message.join(', ') : message; %>

  <% if (typeof message !== ' undefined') { %>
      <div class="translation-result">
        <h3>Result:</h3>
        <p>
          <%= translated %>
        </p>
      </div>
      <% } %>
  </div>

  <%- include('partials/footer') %>