<%- include('partials/header', { title:'Dashboard' }) %>

  <div class="dashboard-container">
    <div class="branding">
      <h2>ğŸŒ Dashboard ğŸŒ</h2>
      <p>Welcome back, <strong>
          <%= session.firstName %>
        </strong>!</p>
    </div>

    <div class="stats-box">
      <p>You have <span>
          <%= total %>
        </span> assigned challenge<%= total===1 ? '' : 's' %>.</p>
      <a href="/challenges" class="btn">â• Add a New Challenge</a>
    </div>

    <h3>Your Challenges</h3>
    <ul class="challenge-list">
      <% if (!assignments.length) { %>
        <li><em>No challenges yet.</em></li>
        <% } else { %>
          <% assignments.forEach(a=> { %>
            <li>
              <strong>
                <a href="/challenges/format_prompt?challengeId=<%=a.challengeId%>" class="btn"><%= a.title %></a>
              </strong>
              <span class="status <%= a.status.replace(' ', '-') %>">
                <%= a.status %>
              </span>
            </li>
            <% }) %>
              <% } %>
    </ul>
  </div>

  <%- include('partials/footer') %>