<%- include('partials/header', { title: 'Create Challenge' }) %>

  <div class="challenge-container">
    <div class="branding">
      <h2>üß† Create a Language Challenge!</h2>
      <p>Pick your language, level, and challenge style!</p>
    </div>

    <form method="POST" action="/challenges/generate">
      <label>
        Language:
        <select name="language" required>
          <option value="">-- Select Language --</option>
          <option value="English">English</option>
          <option value="Spanish">Spanish</option>
          <option value="French">French</option>
          <option value="German">German</option>
          <option value="Chinese">Chinese</option>
        </select>
      </label>

      <label>
        Level:
        <select name="level" required>
          <option value="">-- Select Level --</option>
          <option value="Beginner">Beginner</option>
          <option value="Intermediate">Intermediate</option>
          <option value="Advanced">Advanced</option>
        </select>
      </label>

      <label>
        # Questions:
        <select name="numQuestions" required>
          <% for (let i=1; i <=4; i++) { %>
            <option value="<%= i %>">
              <%= i %>
            </option>
            <% } %>
        </select>
      </label>

      <label>
        Display Mode:
        <select name="displayType" required>
          <option value="choice">Multiple Choice</option>
          <option value="write_in">Write‚ÄëIn</option>
          <option value="prompt">Free‚ÄëForm Prompt</option>
        </select>
      </label>

      <button type="submit">Generate & Assign</button>
    </form>

    <% if (message) { %>
      <p class="form-message">
        <%= message %>
      </p>
      <% } %>

        <p><a href="/dashboard">‚Üê Back to Dashboard</a></p>
  </div>

  <%- include('partials/footer') %>