<%- include('partials/header', { title:'Write-in Challenge' }) %>

<div class="writein-challenge-container">

    <div class="branding">
        <h2> <%= selectedChallenge[0].name %> </h2><br>
        <h3> <%= selectedChallenge[0].description %> </h3>

    </div>

    <div>
        <%=attemptCounter%>.
        <%=questionList[questionIndex].questionText%><br>
        <form action="/challenges/checkAnswer?questionId=<%=currQuestion.questionId%>" method="POST">

            <input type="text" name="userAnswer"><br>

            <input type="submit" value="Submit">
        </form>
    </div>

    <% if (message) { %>
        <p class="form-message">
            <%= message %>
        </p>
    <% } %>

    <p><a href="/dashboard">‚Üê Back to Dashboard</a></p>
</div>

<%- include('partials/footer') %>