<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Language App</title>
</head>

<body>
    <h2><%=selectedChallenge[0].challengeName%></h2>
    <br>
    <%=selectedChallenge[0].challengeDescription%>
    <br>

    <form action="/checkAnswer" method="POST">
        <% for (i=0; i < questionList.length; i++) { %>
        <div class="questionList">
            <%=questionList[i].questionText%><br>

            <input type="text" name="question"><br>


            <input type="submit" value="submit">
        </div>

        <% } %>
    </form>



    <% for (i=0; i < questionList.length; i++) { %>
        <div class="questionList">
            <%=questionList[i].questionText%><br>

            <input type="text" name="question"><br>


            <a class="submitAnswer" href="/challenge_screen_writein?challengeId=<%=questionList[i].challengeId%>">Submit</a>

        </div>

    <% } %>


    <a href="/challenge_dashboard">Back to Dashboard</a>

    <% if (typeof message != "undefined"){%>
    <h3><%=message%></h3>
    <%}%>
</body>